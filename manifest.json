{
    "manifest_version": 3,
    "name": "Malicious URL Detector",
    "version": "1.0",
    "description": "Scans the current URL and checks if it's malicious.",
    "permissions": ["activeTab", "scripting", "notifications", "tabs"],
    "host_permissions": ["<all_urls>", "http://localhost:5000/"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }